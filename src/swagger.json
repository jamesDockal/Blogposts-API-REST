{
    "openapi": "3.0.1",
    "info": {
        "version": "1.0.0",
        "title": "API for creation of blog's posts"
    },
    "paths": {
        "/user": {
            "get": {
                "summary": "Get the all users",
                "description": "Route to get all the user of the application",
                "tags": ["user"],
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "example": {
                                        "users": [
                                            {
                                                "id": "admin",
                                                "username": "admin"
                                            },
                                            {
                                                "id": "46acafcd-4718-491b-aaf4-f0623d5b5adc",
                                                "username": "adsdfin"
                                            },
                                            {
                                                "id": "3731475f-2cc0-4f7c-bb43-5f2007a5bbd6",
                                                "username": "james"
                                            }
                                        ]
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/user/register": {
            "post": {
                "summary": "Register an user",
                "description": "Route to create an user",
                "tags": ["user"],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/User"
                            },
                            "example": {
                                "username": "james",
                                "password": "hard_password"
                            }
                        }
                    }
                },
                "responses": {
                    "400": {
                        "description": "Username alredy in use",
                        "content": {
                            "application/json": {
                                "type": "object",
                                "example": {
                                    "error": "Username alredy in use"
                                }
                            }
                        }
                    },
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "type": "object",
                                "example": {
                                    "user": {
                                        "id": "46acafcd-4718-491b-aaf4-f0623d5b5adc",
                                        "username": "james"
                                    },
                                    "token": "eyJhbGciOiJIUzI1NiJ9.NDZhY2FmY2QtNDcxOC00OTFiLWFhZjQtZjA2MjNkNWI1YWRj.os14cmexqa-OO-v8pGrvwErrYgIrUWzl9ECJE73Idso"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/user/login": {
            "post": {
                "summary": "Sign in",
                "description": "Route to login in the app",
                "tags": ["user"],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/User"
                            }
                        }
                    }
                },
                "responses": {
                    "400": {
                        "description": "Username alredy in use",
                        "content": {
                            "application/json": {
                                "type": "object",
                                "example": {
                                    "error": "User not found"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Username alredy in use",
                        "content": {
                            "application/json": {
                                "type": "object",
                                "example": {
                                    "error": "Invalid password"
                                }
                            }
                        }
                    },
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "type": "object",
                                "example": {
                                    "token": "eyJhbGciOiJIUzI1NiJ9.YWRtaW4.cwmp0-fdJtiF0udYadb2xTlOirD8M19cS6W6gp4lJJ0",
                                    "user": {
                                        "username": "admin",
                                        "id": "admin"
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/blogpost": {
            "get": {
                "summary": "Get all the posts",
                "description": "Route to get all posts",
                "tags": ["post"],
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "example": [
                                        {
                                            "id": "cadb4e78-28a7-41ba-86af-ea7310753501",
                                            "title": "React, getting started!",
                                            "content": "introduce to the front-end framework React.js",
                                            "slug": "react-getting-started",
                                            "created_by": "admin"
                                        },
                                        {
                                            "id": "749e26df-cda1-4a3e-b74a-47a52a9ba23f",
                                            "title": "Node.js first steps",
                                            "content": "lets learn how to install Node and run a server!",
                                            "slug": "nodejs-first-steps",
                                            "created_by": "admin"
                                        },
                                        {
                                            "id": "5fe05ca6-a4a4-43c8-acf1-1f83fb579c70",
                                            "title": "What is a Relational database?",
                                            "content": "The first thing you need to know is, what is a database?",
                                            "slug": "what-is-a-relational-database",
                                            "created_by": "admin"
                                        }
                                    ]
                                }
                            }
                        }
                    }
                }
            }
        },
        "/blogpost/{id}": {
            "get": {
                "summary": "Get a post",
                "description": "Route to get a post by a given a id",
                "tags": ["post"],
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "Id of the post",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "example": {
                                        "id": "cadb4e78-28a7-41ba-86af-ea7310753501",
                                        "title": "React, getting started!",
                                        "content": "introduce to the front-end framework React.js",
                                        "slug": "react-getting-started",
                                        "created_by": "admin"
                                    }
                                }
                            }
                        }
                    }
                }
            },
            "delete": {
                "summary": "Delete a post",
                "description": "Route to delete a post by a given a id",
                "tags": ["post"],
                "security": [{ "bearerAuth": [] }],
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "Id of the post",
                        "required": true
                    }
                ],
                "responses": {
                    "400": {
                        "description": "Invalid Token",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "example": {
                                        "error": "Invalid Token"
                                    }
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Unauthorized"
                    },
                    "404": {
                        "description": "Post not found",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "example": {
                                        "error": "Post not found"
                                    }
                                }
                            }
                        }
                    },
                    "200": {
                        "description": "Post deleted",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "example": {
                                        "success": "Post deleted"
                                    }
                                }
                            }
                        }
                    }
                }
            },
            "put": {
                "summary": "Update a post",
                "description": "Route to update a post by a given a id",
                "tags": ["post"],
                "security": [{ "bearerAuth": [] }],
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "Id of the post",
                        "required": true
                    }
                ],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/Blogpost"
                            },
                            "example": {
                                "title": "A Brand New Title!",
                                "content": "The first thing you need to know is, what is a database?"
                            }
                        }
                    },
                    "required": true
                },
                "responses": {
                    "400": {
                        "description": "Invalid Token",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "example": {
                                        "error": "Invalid Token"
                                    }
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Unauthorized"
                    },
                    "404": {
                        "description": "Post not found",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "example": {
                                        "error": "Post not found"
                                    }
                                }
                            }
                        }
                    },
                    "200": {
                        "description": "Post updated",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "example": {
                                        "updatePost": {
                                            "id": "5fe05ca6-a4a4-43c8-acf1-1f83fb579c70",
                                            "title": "A Brand New Title!",
                                            "content": "The first thing you need to know is, what is a database?",
                                            "slug": "a-brand-new-title",
                                            "created_by": "admin"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/blogpost/create": {
            "post": {
                "summary": "Publish a post",
                "description": "Route to create a post",
                "tags": ["post"],
                "security": [{ "bearerAuth": [] }],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/Blogpost"
                            }
                        }
                    },
                    "required": true
                },
                "responses": {
                    "400": {
                        "description": "Error",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "example": {
                                        "error": "Invalid Token"
                                    }
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Unauthorized"
                    },
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "items": {
                                        "$ref": "#/components/schemas/Blogpost"
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "Blogpost": {
                "type": "object",
                "properties": {
                    "title": {
                        "type": "string",
                        "example": "Node.js first steps"
                    },
                    "content": {
                        "type": "number",
                        "example": "lets learn how to install Node and run a server!"
                    }
                }
            },
            "User": {
                "properties": {
                    "username": {
                        "type": "string"
                    },
                    "password": {
                        "type": "string"
                    }
                }
            }
        },
        "securitySchemes": {
            "bearerAuth": {
                "type": "http",
                "scheme": "bearer",
                "bearerFormat": "JWT"
            }
        }
    }
}
